{
  "version": "1.0",
  "description": "Example MCP server configuration for Claude Code",
  "servers": [
    {
      "id": "task-master-ai",
      "name": "Task Master AI",
      "command": "npx",
      "args": ["-y", "--package=task-master-ai", "task-master-ai"],
      "activationPatterns": ["task_*", "project_*", "todo_*"],
      "priority": 8,
      "approved": true,
      "estimatedTokens": 6000,
      "resourceRequirements": {
        "memory_mb": 128,
        "cpu_percent": 15,
        "disk_mb": 50
      }
    },
    {
      "id": "claude-context",
      "name": "Claude Context Search",
      "command": "npx",
      "args": ["claude-context-mcp"],
      "activationPatterns": ["search_*", "find_*", "semantic_*"],
      "priority": 7,
      "approved": true,
      "estimatedTokens": 3000,
      "resourceRequirements": {
        "memory_mb": 64,
        "cpu_percent": 10,
        "disk_mb": 25
      }
    },
    {
      "id": "github-integration",
      "name": "GitHub MCP Server",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-github"],
      "activationPatterns": ["git_*", "github_*", "pr_*", "issue_*"],
      "priority": 6,
      "approved": true,
      "estimatedTokens": 4000,
      "resourceRequirements": {
        "memory_mb": 96,
        "cpu_percent": 12,
        "disk_mb": 30
      }
    },
    {
      "id": "filesystem-tools",
      "name": "Filesystem MCP Server",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "/workspace"],
      "activationPatterns": ["read_*", "write_*", "file_*", "list_*"],
      "priority": 5,
      "approved": true,
      "estimatedTokens": 2000,
      "resourceRequirements": {
        "memory_mb": 32,
        "cpu_percent": 8,
        "disk_mb": 10
      }
    }
  ],
  "loaderConfig": {
    "maxConcurrentServers": 3,
    "globalTimeoutSeconds": 5,
    "healthCheckInterval": 30,
    "patternCacheTtl": 300,
    "enableAdminOverride": true,
    "failClosed": true,
    "tokenReductionTarget": 0.20,
    "maxMemoryMb": 512,
    "maxCpuPercent": 50,
    "maxDiskMb": 100
  }
}