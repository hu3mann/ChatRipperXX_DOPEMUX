{
  "version": "1.0.0",
  "description": "Optimized MCP server configuration for Claude Code with context efficiency",
  "optimization_rules": {
    "max_tool_description_length": 50,
    "exclude_examples": true,
    "dynamic_loading": true,
    "context_threshold": 0.8,
    "batch_operations": true,
    "lazy_evaluation": true
  },
  "server_priorities": {
    "critical": ["OpenMemory", "Sequential Thinking", "CLI"],
    "high": ["Claude-Context", "Serena", "ConPort"],
    "medium": ["Exa", "context7"],
    "low": ["Zen"]
  },
  "server_configuration": {
    "persistence": {
      "OpenMemory": {
        "type": "vector",
        "storage": "local_sqlite",
        "max_entries": 10000,
        "ttl_seconds": 86400,
        "compression": "lz4",
        "vector_dimensions": 1536
      },
      "ConPort": {
        "type": "project_memory",
        "storage": "git_committed",
        "categories": [
          "decisions",
          "progress",
          "glossary",
          "system_patterns",
          "custom_data"
        ],
        "auto_backup": true,
        "export_formats": ["markdown", "json"]
      }
    },
    "context_planning": {
      "Sequential Thinking": {
        "streaming": true,
        "max_depth": 5,
        "timeout_seconds": 300,
        "cache_enabled": true
      },
      "Claude-Context": {
        "repositories": ["."],
        "file_types": [".py", ".js", ".ts", ".md", ".json"],
        "max_results": 10,
        "semantic_search": true,
        "include_line_numbers": true
      },
      "Serena": {
        "lsp_timeout": 30,
        "max_symbol_depth": 3,
        "cache_enabled": true,
        "auto_sync": true
      }
    },
    "search": {
      "Exa": {
        "query_optimization": true,
        "max_query_length": 100,
        "result_limit": 5,
        "cache_enabled": true,
        "categories": ["tech_docs", "code_examples", "best_practices"]
      }
    },
    "integration": {
      "CLI": {
        "whitelist_only": true,
        "allowed_commands": ["git", "gh", "npm", "pip", "python", "node"],
        "safety_checks": true,
        "execution_timeout": 60
      },
      "Zen": {
        "model_selection": "auto",
        "max_files_per_prompt": 3,
        "continuation_id_tracking": true,
        "token_budget_aware": true
      }
    },
    "documentation": {
      "context7": {
        "tech_stack_mapping": {
          "python": ["requests", "flask", "django", "fastapi", "pydantic"],
          "javascript": ["react", "node", "express", "typescript"],
          "data_science": ["pandas", "numpy", "matplotlib", "scikit-learn"]
        },
        "cache_enabled": true,
        "offline_mode": false
      }
    }
  },
  "memory_cache": {
    "enabled": true,
    "max_size_mb": 512,
    "ttl_seconds": 3600,
    "warm_cache_patterns": [
      "project_structure",
      "recent_tasks",
      "common_imports",
      "api_patterns",
      "code_style_rules"
    ],
    "eviction_strategy": "lru",
    "compression_algorithm": "zstd"
  },
  "context_management": {
    "auto_compaction": true,
    "compaction_threshold": 0.8,
    "redundancy_detection": true,
    "semantic_chunking": true,
    "usage_tracking": true
  },
  "performance_optimization": {
    "batch_server_calls": true,
    "predictive_loading": true,
    "response_caching": true,
    "lazy_initialization": true,
    "connection_pooling": true
  },
  "monitoring": {
    "enabled": true,
    "metrics": ["latency", "token_usage", "cache_hit_ratio", "context_efficiency"],
    "alert_thresholds": {
      "context_usage": 0.8,
      "token_spike": 5000,
      "cache_miss_ratio": 0.3
    },
    "log_level": "info",
    "metrics_retention_days": 30
  },
  "integrations": {
    "todo_system": {
      "enabled": true,
      "conport_tracking": true,
      "openmemory_context": true,
      "sequential_thinking_analysis": true
    },
    "hook_system": {
      "development_mode": true,
      "context_aware": true,
      "performance_tracking": true
    }
  }
}