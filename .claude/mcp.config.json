{
  "mcpServers": {
    "openmemory": {
      "command": "npx",
      "args": ["-y", "openmemory"],
      "env": {
        "OPENMEMORY_API_KEY": "om-cxmay45nsl853izt3z2yifpt4bjwo03s"
      }
    },
    "zen": {
      "command": "sh",
      "args": [
        "-c",
        "exec $(which uvx || echo uvx) --from git+https://github.com/BeehiveInnovations/zen-mcp-server.git zen-mcp-server"
      ],
      "env": {
        "PATH": "/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin:~/.local/bin",
        "OPENAI_API_KEY": "your_api_key_here",
        "GEMINI_API_KEY": "your_gemini_key_here"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "context7-mcp"],
      "env": {},
      "alwaysAllow": [
        "ingest_docs",
        "search_docs",
        "get_library_info",
        "list_libraries",
        "get_doc_structure"
      ]
    }
  }
}