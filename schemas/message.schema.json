{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chatx.local/schemas/message.schema.json",
  "title": "Canonical Message (ChatX)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "msg_id",
    "conv_id",
    "platform",
    "timestamp",
    "sender",
    "sender_id",
    "is_me",
    "text",
    "reactions",
    "attachments",
    "source_ref"
  ],
  "properties": {
    "msg_id": { "type": "string" },
    "conv_id": { "type": "string" },
    "platform": {
      "type": "string",
      "enum": ["imessage", "instagram", "whatsapp", "txt"]
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "sender": { "type": "string" },
    "sender_id": { "type": "string" },
    "is_me": { "type": "boolean" },
    "text": { "type": ["string", "null"] },
    "reply_to_msg_id": { "type": ["string", "null"] },
    "reactions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["from", "kind", "ts"],
        "properties": {
          "from": { "type": "string" },
          "kind": { "type": "string" },
          "ts": { "type": "string", "format": "date-time" }
        }
      }
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "filename"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["image", "video", "audio", "file", "unknown"]
          },
          "filename": { "type": "string" },
          "abs_path": { "type": ["string", "null"] },
          "mime_type": { "type": ["string", "null"] },
          "uti": { "type": ["string", "null"] },
          "transfer_name": { "type": ["string", "null"] }
        }
      }
    },
    "source_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path"],
      "properties": {
        "guid": { "type": ["string", "null"] },
        "path": { "type": "string" }
      }
    },
    "source_meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

