{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xtractxact.dev/schemas/error_rfc7807.schema.json",
  "title": "Error (RFC 7807 + Project Extensions)",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "title", "status", "detail"],
  "properties": {
    "type": {"type": "string"},
    "title": {"type": "string"},
    "status": {"type": "integer"},
    "detail": {"type": "string"},
    "instance": {"type": "string"},
    "error": {"type": "string", "description": "Project error type (e.g., INVALID_INPUT)"},
    "code": {"type": "string", "description": "Machine-readable code (e.g., POLICY_SHIELD_FAILURE)"},
    "hint": {"type": "string"},
    "x_request_id": {"type": "string"}
  }
}