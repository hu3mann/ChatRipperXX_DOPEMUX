{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xtractxact.dev/schemas/run_report.schema.json",
  "title": "Pipeline Run Report (roll-up)",
  "type": "object",
  "additionalProperties": false,
  "required": ["run_id", "started_at", "finished_at", "components"],
  "properties": {
    "run_id": { "type": "string" },
    "started_at": { "type": "string", "format": "date-time" },
    "finished_at": { "type": "string", "format": "date-time" },
    "components": {
      "type": "array",
      "items": { "$ref": "metrics.schema.json" }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "messages_total": { "type": "integer", "minimum": 0 },
        "chunks_total": { "type": "integer", "minimum": 0 },
        "coverage_min": { "type": "number", "minimum": 0, "maximum": 1 },
        "coverage_max": { "type": "number", "minimum": 0, "maximum": 1 },
        "duration_s": { "type": "number", "minimum": 0 }
      }
    }
  }
}
